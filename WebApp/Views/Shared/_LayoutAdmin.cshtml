@{
    var user = this.ViewContext.HttpContext.User;
    bool loggedIn = false;
    string username = "";
    if (user != null && !string.IsNullOrEmpty(user.Identity.Name))
    {
        loggedIn = true;
        username = user.Identity.Name;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Travel" asp-action="List">Travel Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Travel" asp-action="List">Travels</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Destination" asp-action="Index">Destinations</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Guide" asp-action="Index">Guides</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Application" asp-action="ListUserTravels">User actions</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Logout">Sign Out</a>
                        </li>
                    </ul>
                    @{
                        var userName = this.ViewContext.HttpContext.User?.Identity.Name ?? "(user not logged in)";
                    }
                    <div class="d-flex">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="ProfileDetails">@username</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
